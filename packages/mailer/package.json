    "@types/pug": "^2.0.10",
    "@vitest/coverage-v8": "^3.2.3",
    "@vitest/ui": "^3.2.3",
    "eslint": "^9.28.0",
    "typescript": "~5.8.3",
    "vitest": "^3.2.3"
  },
  "dependencies": {
    "@types/bcrypt": "^5.0.2",
    "bcrypt": "^6.0.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.5",
    "pug": "^3.0.3",
    "zod": "^4.0.5"
  }
